<div class="pointer-events-auto w-full overflow-hidden rounded-lg bg-white shadow-lg ring-1 ring-black ring-opacity-5">
  <div class="p-4">
    <div class="flex items-start">
      <div class="flex items-center justify-center w-10 h-10 mr-4 text-white bg-green-500 rounded-full">
        <svg class="w-6 h-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
      <div class="ml-3 w-0 flex-1 pt-0.5">
        <p class="text-sm font-medium text-gray-900">
          Produit ajouté au panier
        </p>
        <p class="mt-1 text-sm text-gray-500">
          @if (Product != null)
          {
            <span>
              Un exemplaire de <span class="font-medium">@Product.ProductName</span>
              au prix de <span class="font-medium">@Product.ProductPrice.ToString("C")</span> a été ajouté au panier.
            </span>
          }
          else
          {
            <span>
              Le produit sélectionné a été ajouté au panier. Merci de votre confiance.
            </span>
          }
        </p>
        <a class="block w-full py-3 px-4 text-center text-green-600 bg-transparent border border-green-600 rounded-md hover:bg-green-500 hover:text-white transition font-medium mt-2"
           href="@Routes.CHECKOUT_ROUTE">
          Voir le panier
        </a>
      </div>
      <div class="ml-4 flex flex-shrink-0">
        <button
          type="button"
          class="inline-flex rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
          @onclick="ToastInstance.Close">
          <span class="sr-only">Fermer</span>
          <!-- Heroicon name: mini/x-mark -->
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>

@code {

  [CascadingParameter]
  private BlazoredToast ToastInstance { get; set; } = default!;
  
  [Parameter]
  [EditorRequired]
  public ProductResponse? Product { get; set; }

}